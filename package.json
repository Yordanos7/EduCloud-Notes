{
  "name": "EduNotes",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @EduNotes/db db:push",
    "db:studio": "turbo -F @EduNotes/db db:studio",
    "db:generate": "turbo -F @EduNotes/db db:generate",
    "db:migrate": "turbo -F @EduNotes/db db:migrate",
    "db:start": "turbo -F @EduNotes/db db:start",
    "db:watch": "turbo -F @EduNotes/db db:watch",
    "db:stop": "turbo -F @EduNotes/db db:stop",
    "db:down": "turbo -F @EduNotes/db db:down"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "gsap": "^3.13.0",
    "react-quill": "^2.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^22.13.11",
    "tsdown": "^0.15.5",
    "turbo": "^2.5.4"
  },
  "packageManager": "npm@10.9.4"
}
